.con_btn{
    width: 200rpx;
    background-color: #fff;
    border: 0rpx #fff;
    width: 100%;
}
.con_btn::after{
    border: 0;
}
.user_info_box {
    height: 320rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    background-color: #ff1554;
    width: 100%;
    padding-left: 30rpx;
    align-items: center;
}

.user_info_box .portrait {
    margin-right: 30rpx;
    width: 180rpx;
    height: 180rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
}

.user_info_box .info_box {
    height: 210rpx;
    width: 255rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    overflow: hidden;
}

.user_info_box .info_box .username {
    width: 100%;
    font-size: 38rpx;
    color: #fff;

}

.user_info_box .info_box .info_box_bottom {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.leave {
    color: #fff;
    font-size: 38rpx;
    font-weight: 600;
}

.leave_img {
width: 200rpx;
height: 80rpx;
border-radius: 10rpx;
}

.bottom_left {
    height: 60rpx;
    line-height: 60rpx;
}

.bottom_right {
    width: 180rpx;
    height: 60rpx;
    width: 50%;
}

.user_info_box .info_box .balance {
    font-size: 28rpx;
    color: #fff;
    margin-left: 30rpx;
}
.member_no{
    width: 255rpx;
}
/* vip-box */
.vip_card_box {
    position: relative;
    font-size: 0;
}

.vip_card_box image {
    width: 100%;
    height: auto
}

.vip_card_box .up {
    position: absolute;
    z-index: 1;
    bottom: 40rpx;
    left: 40rpx;
    color: #fff;
    font-size: 30rpx;
}

.cover_container {
    margin-top: -30rpx;
    padding: 0 20rpx;
    background: #F7F7F7;
    padding-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

