.cover_container .tools {
    display: flex;
    flex-wrap: wrap;
    color: #363636;
}

.cover_container .tools>view {
    width: 33%;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    position: relative;
}

.cover_container .tools>view image {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 20rpx;
}

.info_list {
    padding: 20rpx 0;
}
.order{
    border-radius: 20rpx;
    background-color: #262626;
    margin-top: 20rpx;
    padding: 20rpx;
}
.order_title{
    color: #fff;
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.title_tip{
    font-size: 30rpx;
}
.all_order{
    font-size: 28rpx;
}
.order_item{
   display: flex;
   flex-direction: column;
   align-items: center;
   padding: 5rpx;
   justify-content: center;
   box-sizing: border-box;
   border-radius: 20rpx;
   background-color: #3C3C3C;
   width: 120rpx;
   height: 130rpx;
    color: #fff;
    font-size: 25rpx;
}
.order_item image{
    width: 45rpx;
    height: 45rpx;
}
.cell{
    border-radius: 20rpx;
    margin-top: 20rpx;
    overflow: hidden;
}
.cell_item{
    background-color: #262626 !important;
    color: #fff!important;
    font-size: 30rpx !important;
}

.custom_class{
    background-color: #262626 !important;
}
.order_status {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.contact {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background-color: transparent;
}

.contact::after {
    border: none;
}

.integral_con {
    width: 85%;
    display: flex;
    justify-content: space-between;
    /* border-bottom:2rpx solid  #d2d2d2; */
    padding: 20rpx 0;
    box-sizing: border-box;
    margin: 20rpx auto;
}

.integral {
    font-size: 28rpx;
    color: #ff1554;
}

.integral_text {
    font-size: 24rpx;
    color: #818181;
    margin-top: 10rpx;
}

.integral_item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    border-right: 2rpx solid #d2d2d2;
    text-align: center;
}

.integral_item:last-child {
    border-right: none;
}