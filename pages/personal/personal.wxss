page{
    height:100%;
    background-color: #000000;
}
.personal_container{
    background-color: #000000;
    margin-bottom: 0;
    height: 100%;
}
.con_btn{
    width: 200rpx;
    background-color: #fff;
    border: 0rpx #fff;
    width: 100%;
}
.con_btn::after{
    border: 0;
}
.user_section{
    height: 520rpx;
    background-color: #262626;
    border-radius: 0 0 20rpx 20rpx;
}
.user_info_box {
    height: 320rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    background-color: #262626;
    width: 100%;
    padding-left: 30rpx;
    align-items: center;
}

.user_info_box .portrait {
    margin-right: 30rpx;
    width: 160rpx;
    height: 160rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
}

.user_info_box .info_box {
    height: 180rpx;
    width: 255rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
}
.info_box_top{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
}
.user_info_box .info_box .username {
   
    font-size: 48rpx;
    color: #fff;

}

.user_info_box .info_box .info_box_bottom {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
}

.leave {
    color: #BE9F1E;
    font-size: 32rpx;
    background-color: #000;
    padding: 5rpx 10rpx; 
    border-radius: 10rpx;
    margin-left: 20rpx;
}

.leave_img {
width: 200rpx;
height: 80rpx;
border-radius: 10rpx;
}
.balance{
    font-size: 38rpx;
    color: #fff;
}
.bottom_left {
    height: 60rpx;
    line-height: 60rpx;
}

.bottom_right {
    width: 180rpx;
    height: 60rpx;
    width: 50%;
}

