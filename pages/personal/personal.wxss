    font-size: 28rpx;
    color: #fff;
    margin-left: 30rpx;
} */
.member_no{
    width: 155rpx;
    height: 155rpx;
    justify-self: right;
}
/* vip-box */
.vip_card_box {
    position: relative;
    font-size: 0;
}

.vip_card_box image {
    width: 100%;
    height: auto
}

.vip_card_box .up {
    position: absolute;
    z-index: 1;
    bottom: 40rpx;
    left: 40rpx;
    color: #fff;
    font-size: 30rpx;
}

.cover_container {
    margin-top: -30rpx;
    padding: 0 20rpx;
    background: #000000;
    padding-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 0rpx;
}
.card{
    width: 710rpx;
    padding: 20rpx;
    margin-top: -220rpx;
    z-index: 99;
}
.card image{
    width: 100%;
}
