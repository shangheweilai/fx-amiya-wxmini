<!--pages/personalInfo/personalInfo.wxml-->
<view class="container">
    <van-cell-group>
        <van-cell title="头像">
            <view>
                <image class="avatar" src="{{userInfo.avatarUrl}}" mode="widthFix"></image>
            </view>
        </van-cell>
        <van-cell title="手机号" value="{{userInfo.phone}} " is-link bindtap="editPhone" value="{{userInfo.phone}}" />
        <van-cell title="会员等级" value="vip1" />
        <van-cell title="性别" value="{{userInfo.sex}}" />
        <van-cell title="生日" value="未知" />
        <van-cell title="地区" value="{{userInfo.city==='' ? '未知':userInfo.city}}" />
        <van-cell title="收货地址" is-link link-type="navigateTo" data-url="/pages/addressList/addressList" bindtap="to" value="修改/设置" />
    </van-cell-group>
</view>