.project_wrap {
  padding: 40rpx 42rpx;
  background-color: #fff;
}

.project_wrap .list {
  display: flex;
  overflow: scroll;
}

.project_wrap .list .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.project_wrap .list .item>view:first-child {
  width: 160rpx;
  height: 160rpx;
  padding: 10rpx;
  color: rgba(16, 16, 16, 100);
  border: 1rpx solid #f1f1f1;
}

.project_wrap .list .item>view:first-child image {
  width: 160rpx;
  height: 160rpx;
}

.project_wrap .list .item>view:nth-child(2) {
  text-align: left;
  width: 100%;
  color: rgba(16, 16, 16, 100);
  margin-top: 16rpx;
  font-size: 26rpx;
}

.project_wrap .list .item>view:last-child {
  width: 56px;
  height: 30px;
  border-radius: 14px 14px 14px 14px;
  color: rgba(249, 247, 247, 100);
  border: 1rpx solid rgba(255, 255, 255, 100);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

.project_wrap .list .item>view:last-child {
  background-color: rgba(240, 7, 7, 100);
}