/* pages/missionCenter/missionCenter.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    width: 100%;
    height: 100%;
}
.big{
    font-size: 35rpx;
    color: #fff;
    font-weight: bold;
}
.title{
    font-size: 35rpx;
    font-weight: bold;
}
.card{
    box-shadow: 2rpx 2rpx 5rpx 5rpx #e2e2e2;
    border-radius: 20rpx;
    margin: 20rpx 30rpx;
    padding: 10rpx;
}
.circle{
    width: 500rpx;
    height: 500rpx;
    border-radius: 250rpx;
    margin-top: 30rpx;
    background-image: linear-gradient(to top, #c71d6f 0%, #ff1554 100%);
    box-shadow: 2rpx 2rpx 5rpx 5rpx #e2e2e2;
    display: flex;
    justify-content: center;
    align-items: center;
}
.circle view{
    text-align: center;
}

.tip{

}
.growth{
    margin-top: 50rpx;
    margin-bottom: 50rpx;
}
.content{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-top: 30rpx;
}
