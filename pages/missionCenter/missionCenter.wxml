<!--pages/missionCenter/missionCenter.wxml-->
<view class="container">
    <view class="circle">
        <view class="content">
            <view class="tip big">我的成长值</view>
            <view class="growth big">0</view>
            <view class="diff big">还差<text>0</text>成长值升级会员</view>
        </view>
    </view>
    <view class="content">
        <view class="base_mission card">
            <view class="title">
                <text>基础任务</text>
            </view>
            <view class="mission_list">
                <van-cell custom-class="mission_cell" value-class="mission_value" title="完善信息" title-width="400rpx" bindtap="toCompelete" border="{{false}}" value="去完成" label="+5成长值" />
            </view>
            <view></view>
        </view>
        <view class="shopping_mission card">
            <view class="title"><text>购物任务</text></view>
            <view class="mission_list">
                <van-cell custom-class="mission_cell" value-class="mission_value"  title="完成下单" title-width="400rpx" bindtap="toCompelete" value="去完成" label="每完成一笔订单,获得10点成长值" />
                <van-cell custom-class="mission_cell" value-class="mission_value"  title="购买产品" title-width="400rpx" bindtap="toCompelete" border="{{false}}" value="去完成" label="每消费一元获得10点成长值" />
            </view>
        </view>
        <view class="complete_mission card">
            <view class="title"><text>已完成任务</text></view>
            <view class="mission_list">
                <!-- <van-cell custom-class="mission_cell" value-class="mission_value" title="任务完成" title-width="400rpx" border="{{false}}" label="+5成长值" /> -->
                <van-cell custom-class="mission_cell" value-class="mission_value" title="这里什么都没有" title-width="400rpx" border="{{false}}" label="......" />
            </view>
        </view>
        <view class="card">
            <view><text class="title">已绑定手机号</text></view>
            <view class="mission_list">
                <van-cell custom-class="mission_cell" bindtap="toCompelete" value-class="mission_value" title="完善信息" title-width="400rpx" border="{{false}}" value="去完成" label="+5成长值" />
            </view>
        </view>
    </view>
</view>