/* pages/cartConfirmOrder/cartConfirmOrder.wxss */
.container {
    padding: 30rpx;
    background-color: #fff;
}
.address {
    background-color: #fff;
    padding: 20rpx 30rpx;
  }
  
  .select_address {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #383839;
  }
  
  .select_address>view:first-of-type {
    display: flex;
    align-items: center;
  }
  
  .select_address>view:first-of-type>text:first-of-type {
    font-size: 60rpx;
    color: #3388FF;
  }
  
  .select_address>view:first-of-type>text:last-of-type {
    color: #383839;
    padding-left: 10rpx;
  }
  
  .select_address>view:last-of-type text {
    font-size: 40rpx;
  }
  
  .address_info {
    display: flex;
    align-items: center;
  }
  
  .address_info .icon {
    color: #383839;
    font-size: 28rpx;
  }
  
  .address_info .text {
    flex: 1;
    padding-left: 20rpx;
  }
  
  .address_info .text>view:first-of-type {
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: bold;
  }
  
  .address_info .text>view:last-of-type {
    font-size: 28rpx;
    color: #383839;
    padding-top: 10rpx;
  }
.product_item{
    display: flex;
    margin-top: 30rpx;
    align-items: center;
    height: 200rpx;
}
.product_img image{
    width: 200rpx;
    border-radius: 20rpx;
}
.dec{
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
}
.pri_num{
    display: flex;
    justify-content: space-between;
}
.price{
    color: #EE0A24;
}
.submit_order {
    width: 100%;
    height: 100rpx;
    bottom: 0;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    background-color: #fff;
  }
  
  .money{
      color: #EE0A24;
  }
  .point{
    color: #EE0A24;
    margin-left: 20rpx;
  }
  .submit_order>view:last-of-type {
    height: 100%;
    width: 30%;
    margin-left: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #EE0A24;
    color: #fff;
  }
