<!--pages/giftList/giftList.wxml-->
<view class="container">
  <view class="gift_item" wx:for="{{list}}" wx:key="index">
    <van-radio-group value="{{ radio }}" bind:change="onChange">
      <van-radio  name="{{item.id}}" checked-color="#dec350">
        <view class="item">
          <image src="{{item.thumbPicUrl}}" />
          <view class="name">{{item.name}}</view>
        </view>
      </van-radio>
    </van-radio-group>
  </view>
  <view wx:if="{{!nextPage}}">
    <van-divider contentPosition="center" customStyle="font-size: 28rpx;padding:0 20%;margin:10rpx 0">暂无更多数据
    </van-divider>
  </view>
  <view class="confirm" bindtap="confirm">
    <van-button color="#DEC350" custom-style="width:100%;border:none;">
      <view>确认</view>
    </van-button>
  </view>
</view>
